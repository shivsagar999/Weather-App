<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context="com.eurofins.weatherapp.OutputFragment">

    <LinearLayout
        android:id="@+id/temperature_place"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/text_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/your_temperature"
            android:textAlignment="center"
            android:textColor="#FF000000"

            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_box"
        android:layout_width="152dp"
        android:layout_height="100dp"
        android:layout_below="@id/temperature_place"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:contentDescription="@string/description"
            android:layout_width="41dp"
            android:layout_height="39dp"
            android:src="@drawable/info" />


        <TextView
            android:id="@+id/description"
            android:layout_width="119dp"
            android:layout_height="59dp"

            android:text="@string/description"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cloud_cover_box"

        android:layout_width="208dp"
        android:layout_height="88dp"
        android:layout_below="@id/temperature_place"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="9dp"

        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:contentDescription="@string/cloud_cover"
            android:layout_width="41dp"
            android:layout_height="39dp"
            android:src="@drawable/_3_cloud_png_image" />

        <TextView
            android:id="@+id/cloud_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="@string/cloud_cover"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pressure_box"
        android:layout_width="191dp"
        android:layout_height="144dp"
        android:layout_below="@id/description_box"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:contentDescription="@string/pressure"
            android:layout_width="41dp"
            android:layout_height="39dp"
            android:src="@drawable/pressure"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/pressure"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pressure_box"
        android:layout_centerInParent="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/next_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="@string/display_daily_forecast"

            />

    </LinearLayout>

    <!--
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view" />
    -->
</RelativeLayout>